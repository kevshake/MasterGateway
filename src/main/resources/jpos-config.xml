<?xml version="1.0" encoding="UTF-8"?>
<jpos>
    <!-- POS Terminal Server Configuration -->
    <server class="org.jpos.q2.iso.QServer" logger="Q2" name="pos-server">
        <attr name="port" type="java.lang.Integer">5878</attr>
        <channel class="org.jpos.iso.channel.NACChannel" logger="Q2" 
                 name="pos-channel" packager="org.jpos.iso.packager.ISO87APackager">
            <property name="timeout" value="30000"/>
        </channel>
        <request-listener class="com.kevshake.gateway.components.IsoServerHandler" 
                         logger="Q2" name="pos-request-listener"/>
    </server>
    
    <!-- Bank Communication Channel Configuration -->
    <channel class="org.jpos.iso.channel.ASCIIChannel" logger="Q2" 
             name="bank-channel" packager="org.jpos.iso.packager.ISO87BPackager">
        <property name="host" value="192.168.1.100"/>
        <property name="port" value="8001"/>
        <property name="timeout" value="30000"/>
    </channel>
    
    <!-- Logging Configuration -->
    <logger name="Q2" class="org.jpos.util.SimpleLogSource">
        <log-listener class="org.jpos.util.RotateLogListener">
            <property name="file" value="logs/jpos.log"/>
            <property name="window" value="86400"/>
            <property name="copies" value="7"/>
        </log-listener>
    </logger>
</jpos>
